# Q4 Answer Template
data = input('숫자로 이루어진 문자열을 입력하세요. ')
r = int(data[0])
d = data[0]

for i in range(0, len(data)-1) :
    if int(data[i]) == 0 or int(data[i])==1 or int(data[i+1])==0 or int(data[i+1])==1 :
        r = r + int(data[i+1])
        d = d + ' + ' + data[i+1]
    else :
        r = r * int(data[i+1])
        d = d + ' x ' + data[i+1]
#result = data
result = r

print(d + ' = ' + str(result))
